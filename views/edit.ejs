<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>EDIT
        <%= editUser.username.toUpperCase() %>
    </title>
    <%- include layout/materialize %>
</head>

<body>
    <%- include layout/innerside %>
        <div class="container">
            <div class="row">
                <form action="/user/profile/edit" method="post">
                    <h2>Edit Profile
                        <%= editUser.username.toUpperCase() %>
                    </h2>
                    <input type="text" name="name" value="<%=editUser.fullname%>"><br>
                    <input type="text" name="email" value="<%=editUser.email%>"><br>
                    <button type="submit" class="btn waves-effect waves-light grey" name="submit">Submit</button>
                </form>
            </div>

        </div>
</body>

</html>